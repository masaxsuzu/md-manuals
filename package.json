{
  "name": "mini-react-app",
  "version": "1.0.0",
  "license": "MIT",
  "devDependencies": {
    "@parcel/transformer-sass": "2.0.0-rc.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.3.6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.2.3",
    "parcel": "^2.0.0-rc.0",
    "postcss-modules": "^4.2.2",
    "prettier": "^2.4.1",
    "sass": "^1.42.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "start": "yarn parcel src/index.html --open --no-optimize",
    "build": "yarn parcel build src/index.html",
    "build:gh-pages": "yarn parcel build src/index.html --public-url /mini-react-app --dist-dir ./docs",
    "test": "jest --env=jsdom",
    "fmt": "prettier --write src",
    "lint": "prettier --check src"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "testMatch": [
      "**/*.(test|spec).(ts|tsx|js)"
    ]
  }
}
